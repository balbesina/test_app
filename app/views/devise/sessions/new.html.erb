<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div>
  	<%= f.email_field :email, autofocus: true, class: 'input-block-level', placeholder: 'Email address' %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: "off", class: 'input-block-level', placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? -%>
	<label for="user_remember_me" class="checkbox">
		<input type="hidden" value="0" name="user[remember_me]"></input>
		<input id="user_remember_me" type="checkbox" value="1" name="user[remember_me]"></input>
	    Remember me
	</label>
  <% end -%>

  <div><%= f.submit "Login", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
