<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.email_field :email, autofocus: true, class: 'input-block-level', placeholder: 'Email address' %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: "off", class: 'input-block-level', placeholder: 'Password' %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input-block-level', placeholder: 'Confirm password' %>
  </div>

  <div><%= f.submit "Register", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
